{
  "name": "juridicai",
  "version": "0.2.1",
  "description": "Multi-tenant SaaS platform for law firm management",
  "private": true,
  "type": "module",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test unit --force-exit",
    "test:e2e": "node ace test --force-exit",
    "lint": "eslint .",
    "lint:fix": "eslint \"{app,providers,config,tests,start}/**/*.ts\" --fix --ignore-pattern pnpm-lock.yaml",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "docker": "node ace migration:run && node ace db:seed && node bin/server.js"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#events/*": "./app/events/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#extensions/*": "./app/extensions/*.js",
    "#mixins/*": "./app/mixins/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#interfaces/*": "./app/interfaces/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#routes/*": "./app/routes/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#shared/*": "./app/shared/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/openapi-assertions": "^0.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@swc/core": "1.13.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.1.1",
    "@adonisjs/auth": "^9.5.0",
    "@adonisjs/cache": "^1.3.0",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/i18n": "^2.2.2",
    "@adonisjs/limiter": "^2.4.0",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/mail": "^9.2.2",
    "@adonisjs/redis": "^9.2.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@google-cloud/storage": "^7.17.1",
    "@rlanz/bull-queue": "^3.1.0",
    "@vinejs/vine": "^3.0.1",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.4.1",
    "edge.js": "^6.3.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
